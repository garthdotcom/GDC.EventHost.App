@using GDC.EventHost.App.Areas.Admin.ViewModels
@model EventAssetEditVM

<h4>Event / @Model.EventTitle / Asset</h4>
<br />
<form asp-action="Edit" enctype="multipart/form-data" method="post" class="form-horizontal" role="form">

    <div>
        <strong>Please provide details for this asset:</strong>
    </div>
    <br />

    <div asp-validation-summary="All" class="text-danger"></div>

    <input asp-for="EventAsset.Id" type="hidden" />
    <input asp-for="EventAsset.EventId" type="hidden" />

    <div class="form-group">
        <label asp-for="EventAsset.AssetTypeId" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <select asp-for="EventAsset.AssetTypeId" asp-items="Model.AssetTypeList" class="form-control">
                <option value="">-- Select One --</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="EventAsset.AssetId" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <select asp-for="EventAsset.AssetId" asp-items="Model.AssetList" class="form-control">
                <option value="">-- Select One --</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="EventAsset.OrdinalValue" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="EventAsset.OrdinalValue" class="form-control" />
            <span asp-validation-for="EventAsset.OrdinalValue" class="text-danger"></span>
        </div>
    </div>

    <br />

    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <a class="btn btn-sm btn-outline-dark" 
               href="javascript:history.go(-1)">Cancel</a>&nbsp;
            <input class="btn btn-sm btn-outline-dark"
                   type="submit" value="Save" />
        </div>
    </div>

</form>