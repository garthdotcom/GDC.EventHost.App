@using GDC.EventHost.App.Areas.Admin.ViewModels
@model PerformanceTicketTemplateForCreateVM

<h4>Create Tickets / @Model.PerformanceTitle</h4>
<br />

    <form asp-action="CreateTickets" enctype="multipart/form-data" method="post" class="form-horizontal" role="form">

        <div>
            <strong>Please provide basic ticket details:</strong>
        </div>
        <br />

        <div asp-validation-summary="All" class="text-danger"></div>

        <input asp-for="@Model.PerformanceTicketForCreate.PerformanceId" type="hidden" />
        <input asp-for="@Model.PerformanceTicketForCreate.SeatingPlanId" type="hidden" />

        <div class="form-group">
            <label class="col-md-2 control-label">Seating Plan Name</label>
            <div class="col-md-5">
                <input asp-for="@Model.SeatingPlanName" class="form-control" readonly />
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label">Basic Ticket Price</label>
            <div class="col-md-5">
                <input asp-for="@Model.PerformanceTicketForCreate.BasicTicketPrice" class="form-control" />
                <span asp-validation-for="@Model.PerformanceTicketForCreate.BasicTicketPrice" class="text-danger"></span>
            </div>
        </div>

        <br />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-5">
                <a class="btn btn-sm btn-outline-dark"
                   href="@Model.ReturnUrl">Back</a>&nbsp;
                <input class="btn btn-sm btn-outline-dark"
                       type="submit" value="Save" />
            </div>
        </div>

    </form>