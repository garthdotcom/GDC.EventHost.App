@using GDC.EventHost.App.Areas.Admin.ViewModels
@model AssetEditVM

@if (string.IsNullOrEmpty(Model.Asset.Name))
{
    <h4>Create Asset</h4>
}
else
{
    <h4>Edit Asset / @Model.Asset.Name</h4>
}
<br />
<br />
<form asp-action="Edit" enctype="multipart/form-data" method="post" class="form-horizontal" role="form">

    <div>
        <strong>Please provide details for this asset:</strong>
    </div>
    <br />

    <div asp-validation-summary="All" class="text-danger"></div>

    <input asp-for="Asset.Id" type="hidden" />

    <div class="form-group">
        <label asp-for="Asset.Name" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Asset.Name" class="form-control" />
            <span asp-validation-for="Asset.Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Asset.Description" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Asset.Description" class="form-control" />
            <span asp-validation-for="Asset.Description" class="text-danger"></span>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.Asset.Uri))
    {
        <div class="form-group">
            <label asp-for="Asset.Uri" class="col-md-2 control-label"></label>
            <div class="col-md-5">
                <input asp-for="Asset.Uri" readonly class="form-control" />
            </div>
        </div>
    }

    <div class="form-group">
        <label asp-for="FileUpload" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input type="file" asp-for="FileUpload" class="form-control btn btn-outline-dark" />
            <span asp-validation-for="FileUpload" class="text-danger"></span>
        </div>
    </div>

    <br />

    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <a class="btn btn-sm btn-outline-dark" 
               href="javascript:history.go(-1)">Cancel</a>&nbsp;
            <input class="btn btn-sm btn-outline-dark" 
               type="submit" value="Save" />
        </div>
    </div>

</form>