@using Microsoft.AspNetCore.Identity

<ul class="navbar-nav">

    @if (User.Identity?.IsAuthenticated == true)
    {
        var name = User?.Claims?.FirstOrDefault(c => c.Type == "name")?.Value;

        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-light btn btn-link" 
                data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@name</a>
            <div class="dropdown-menu">
                <a class="dropdown-item"
                   asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">My Account</a>
                <a class="dropdown-item" href="#">My Orders</a>
                <a class="dropdown-item">
                    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" 
                        asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <input id="logout" value="Logout" type="submit" style="padding:0" class="nav-link btn btn-link text-dark" />
                </form>
                </a>
            </div>
        </li>
    }
</ul>
