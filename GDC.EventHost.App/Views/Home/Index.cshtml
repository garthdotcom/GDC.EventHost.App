@model HomeViewModel

@* <partial name="_Carousel" /> *@


    <div class="card-columns">

        @foreach (var series in Model.SeriesList)
        {
            <partial name="_SeriesDetailCard" model="series" />
        }
    </div>

<br />
@* <h5>Upcoming Events</h5>
<br />
@await Component.InvokeAsync("UpcomingPerformances") *@
@if (User.Claims.Any())
{
    <div class="card">
        <br />
        <div class="card-body">
            <h5 class="card-title">
                User Claims
            </h5>
            <p class="card-text">
                <table class="table table-sm">
                    @foreach (var claim in User.Claims)
                    {
                        <tr>
                            <td>@claim.Type</td>
                            <td>@claim.Value</td>
                        </tr>
                    }
                </table>
            </p>
        </div>
    </div>
}